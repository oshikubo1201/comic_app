
<div class="main">
  <div class="inner">
    <h2 class="page-heading">みんなのオススメ漫画！！</h2>
    <div class="card__wrapper">
      <% @items.each do |item| %>
        <div class="card">
          <%= link_to image_tag(item.image, class: :card__img ), item_path(item.id)%>
          <div class="card__body">
            <%= link_to item.items_name, item_path(item.id), class: :card__title%>
            <p class="card__summary">
              <%= item.publisher %>
            </p>
            <%= link_to item.user.nickname, user_path(item.user.id), class: :card__user %>
            <div class="review_contents">
              <%= link_to "review", item_path(item.id), class: :review_content%>
              <%= link_to "chat room", item_path(item.id), class: :review_content%>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>