<main class="main">
  <div class="inner">
    <div class="item__wrapper">
      <p class="item__hedding">
        <%= @item.items_name%>
      </p>
      <%= link_to "by #{@item.user.nickname}", root_path, class: :item__user %>
      <%# 漫画投稿者とログインしているユーザーが同じであれば以下を表示する %>
      <% if user_signed_in? && current_user.id == @item.user_id %>
        <div class="item__edit_delete">
          <%= link_to "編集する", edit_item_path(@item.id), class: :item__btn %>
          <%= link_to "削除する", root_path,method: :delete, class: :item__btn %>
        </div>
      <% elsif user_signed_in? %>
        <p class="is-size-4 mb-3">レビューを書く</p>
        <div class="rating-box mt-3">
          <%= form_with(model: [@item, @review], local: true) do |f| %>
          <div class="main-rating">
            <div class="ratings mb-3">
              <span class="fa fa-star-o" id="star"></span>
              <span class="fa fa-star-o" id="star"></span>
              <span class="fa fa-star-o" id="star"></span>
              <span class="fa fa-star-o" id="star"></span>
              <span class="fa fa-star-o" id="star"></span>
            </div>
            <div class="ml-3 rating-value-display"><span id="rating-value-display">0</span>/5</div>
          </div>
          <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.hidden_field :score, id: "rating-value" %>
          <%= f.text_field :review, class: "textarea" %>
          <%= f.submit "保存", class: "button mt-3" %>
          <% end %>
        </div>
      <% end %>
      <%# // 漫画投稿者とログインしているユーザーが同じであれば上記を表示する %>
      <div class="item__image">
        <%= image_tag @item.image %>
      </div>
      <div class="comic__body">
        <div class="item__detail">
          <p class="detail__title">出版社（サイト名）</p>
          <p class="detail__message">
            <%= @item.publisher %>
          </p>
        </div>
        <div class="comic__detail">
          <p class="detail__title">オススメポイント！！</p>
          <p class="item__recommendation"><%= @item.recommendation %></p>
        </div>
      </div>
        <%# ログインユーザーにのみコメント投稿フォームを表示 %>
        <% if user_signed_in? %>
           <%= form_with(model:[@item, @comment],local: true) do |f|%>
           <div class="fields" >
              <div class="field">
                <%= f.text_field :comment, id:"comment_content", placeholder: 'コメント' %>
              </div>
              <div class="show_actions">
                <%= f.submit "送信する", class: :form__btn  %>
              </div>
            </div>
           <% end %>
        <% end %>
        <%# // ログインユーザーにのみ上記コメント投稿フォームを表示 %>

      <div class="item__comments">
        <ul class="comments_lists">
          <%  @comments.reverse.each do |comment| %>
            <li class="comments_list">
              <%= comment.comment %>
              <%= link_to comment.user.nickname,  user_path(comment.user.id), class: :comment_user %>
            </li>
          <% end %>
        </ul>
      </div>

    </div>
  </div>
</main>


